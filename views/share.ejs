<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head") %>
</head>
<body class="bg-slate-50">
  <%- include("partials/navbar") %>
  <section class="px-4 py-14 md:py-20">
    <div class="max-w-screen-lg mx-auto grid md:grid-cols-8 md:gap-10">
      <main class="flex flex-col gap-6 md:col-span-6">
        <div class="flex flex-col gap-2">
          <h1 class="text-2xl font-bold md:text-4xl"><%= decode(share.folderShared.name) %></h1>
          <% if (share.folderShared.description) { %>
            <p><%= decode(share.folderShared.description) %> </p>
          <% } %>
        </div>
        <div class="flex flex-col gap-3">
          <!-- List of files go in here-->
          <% if (share.folderShared.files.length > 0) { %>
            <% share.folderShared.files.forEach(file => { %>
              <div class="w-fill flex flex-wrap gap-4 justify-between items-center p-4 bg-slate-100 border border-slate-300 rounded-md shadow-md">
                <div>
                  <p class="text-sm font-medium text-slate-600">File Name</p>
                  <p class="text-lg text-slate-900"><%= decode(file.name) %></p>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-600">File Type</p>
                  <p class="text-lg text-slate-900"><%= file.fileType %></p>
                </div>
                <div>
                  <p class="text-sm font-medium text-slate-600">File Size</p>
                  <p class="text-lg text-slate-900"><%= formatBytes(file.size) %></p>
                </div>
                <a href="/shares/<%= share.id %>/download/<%= file.id %>" download>
                  <svg aria-label="download" class="h-6 w-6 fill-slate-900" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 512 512" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M216 0h80c13.3 0 24 10.7 24 24v168h87.7c17.8 0 26.7 21.5 14.1 34.1L269.7 378.3c-7.5 7.5-19.8 7.5-27.3 0L90.1 226.1c-12.6-12.6-3.7-34.1 14.1-34.1H192V24c0-13.3 10.7-24 24-24zm296 376v112c0 13.3-10.7 24-24 24H24c-13.3 0-24-10.7-24-24V376c0-13.3 10.7-24 24-24h146.7l49 49c20.1 20.1 52.5 20.1 72.6 0l49-49H488c13.3 0 24 10.7 24 24zm-124 88c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20zm64 0c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20z"></path></svg>
                </a>
              </div>
            <% }) %>
           
          <% } %>
        </div>
      </main>
      <aside class="flex flex-col gap-4 items-start p-6 md:col-span-2">
        <a href="#" class="bg-slate-800 text-slate-50 text-lg px-6 py-2 rounded-xl block leading-none">Download All</a>
      </aside>
    </div>
  </section>
</body>
</html>