<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("partials/head") %>
</head>
<body class="bg-slate-50">
  <%- include("partials/navbar") %>
  <section class="p-4 flex flex-col gap-10 py-14 items-center justify-center bg-slate-50 md:py-20">
    <div class="flex flex-col gap-6">
      <h1 class="text-4xl font-bold text-slate-950 md:text-6xl">Sign up for File Uploader</h1>
      <p class="text-slate-800 text-lg font-medium md:text-xl md:text-center">Join the 10s of people using this app!</p>
    </div>
    <form action="/signup" method="POST" class="p-6 flex flex-col gap-4 w-full max-w-sm bg-white border border-slate-300 shadow-lg rounded-xl">
      <div class="flex flex-col gap-1">
        <label for="first_name" class="text-slate-800">First Name</label>
        <input
          type="text"
          name="first_name"
          id="first_name"
          value="<%= locals.firstName ? locals.firstName : "" %>"
          class="text-slate-900 rounded-md text-lg bg-slate-50 border border-slate-300  placeholder:text-slate-500 px-4 py-2"
          />
      </div>
      <% if (locals.validErrors?.first_name) { %>
        <p class="p-2 bg-red-50 border border-red-100 text-red-900 rounded-md"><%= locals.validErrors.first_name?.msg%></p>    
      <% } %>
      <div class="flex flex-col gap-1">
        <label for="last_name" class="text-slate-800">Last Name</label>
        <input
          type="text"
          name="last_name"
          id="last_name"
          value="<%= locals.lastName ? locals.lastName : "" %>"
          class="text-slate-900 rounded-md text-lg bg-slate-50 border border-slate-300  placeholder:text-slate-500 px-4 py-2"
          />
      </div>
      <% if (locals.validErrors?.last_name) { %>
        <p class="p-2 bg-red-50 border border-red-100 text-red-900 rounded-md"><%= locals.validErrors.last_name?.msg%></p>    
      <% } %>
      <div class="flex flex-col gap-1">
        <label for="email" class="text-slate-800">Email</label>
        <input 
          type="email"
          name="email"
          id="email"
          value="<%= locals.email ? locals.email : "" %>"
          class="text-slate-900 rounded-md text-lg bg-slate-50 border border-slate-300  placeholder:text-slate-500 px-4 py-2"
          />
      </div>
      <% if (locals.validErrors?.email) { %>
        <p class="p-2 bg-red-50 border border-red-100 text-red-900 rounded-md"><%= locals.validErrors.email?.msg%></p>    
      <% } %>
      <div class="flex flex-col gap-1">
        <label for="password" class="text-slate-800">Password</label>
        <input type="password" name="password" id="password" class="text-slate-900 rounded-md text-lg bg-slate-50 border border-slate-300  placeholder:text-slate-500 px-4 py-2">
      </div>
      <% if (locals.validErrors?.password) { %>
        <p class="p-2 bg-red-50 border border-red-100 text-red-900 rounded-md"><%= locals.validErrors.password?.msg%></p>    
      <% } %>
      <div class="flex flex-col gap-1">
        <label for="confirm_password" class="text-slate-800">Confirm Password</label>
        <input type="password" name="confirm_password" id="confirm_password" class="text-slate-900 rounded-md text-lg bg-slate-50 border border-slate-300  placeholder:text-slate-500 px-4 py-2">
      </div>
      <% if (locals.validErrors?.confirm_password) { %>
        <p class="p-2 bg-red-50 border border-red-100 text-red-900 rounded-md"><%= locals.validErrors.confirm_password?.msg%></p>    
      <% } %>
      <button type="submit" class="bg-slate-800 text-slate-50 text-lg px-6 py-2 rounded-xl block leading-none">Sign Up</a>
    </form>
  </section>
</body>
</html>